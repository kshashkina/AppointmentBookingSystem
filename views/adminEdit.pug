doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/css/editProfile.css')
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.css")
        title Edit Patient Data
    body
        header
            nav
                ul
                    li
                        a(href="/")
                            i.fa.fa-home
        .main
            .container
                h1 Edit Admin Data
                form(action="/admin/edit" method="post")
                    input(type="hidden" name="_method" value="PATCH")
                    label(for="firstName") First Name:
                    input(type="text", id="firstName", name="firstName", value=admin.firstName, required)
                    label(for="lastName") Last Name:
                    input(type="text", id="lastName", name="lastName", value=admin.lastName, required)
                    label(for="email") Email:
                    input(type="email", id="email", name="email", value=admin.email, required)
                    label(for="dateOfBirth") Date of Birth:
                    input(type="date", id="dateOfBirth", name="dateOfBirth", value=admin.dateOfBirth ? admin.dateOfBirth.toISOString().substr(0, 10) : '', required)
                    label(for="gender") Gender:
                    select(id="gender", name="gender", required)
                        option(value="male", selected=admin.gender === "male") Male
                        option(value="female", selected=admin.gender === "female") Female
                    label(for="address") Address:
                    textarea(id="address", name="address", rows="4", required)= admin.address
                    label(for="phoneNumber") Phone Number:
                    input(type="tel", id="phoneNumber", name="phoneNumber", value=admin.phoneNumber, required)
                    button(type="submit") Save Changes
